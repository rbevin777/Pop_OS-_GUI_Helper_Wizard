{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "`pkg-config --cflags gtk4`",
                "${file}",
                // "${workspaceFolder}/Src/app_options.h",
                // "${workspaceFolder}/Src/app_options.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "`pkg-config --libs gtk4`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}